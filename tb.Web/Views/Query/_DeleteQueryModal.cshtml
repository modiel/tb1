@model tb.Core.Models.Query

<!-- add modal containing a form to delete query -->
<!-- review student _Delete modal -->
<form asp-action="DeleteQueryConfirm">
<div class="modal fade"  tabindex="-1" id="deleteQueryModal" aria-labelledby="deleteQueryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="closeModalLabel">Delete Query</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">  
        <p>Are you sure you want to delete Query @Model.Id?</p> 
      <div class="modal-footer">
         <form asp-controller="Query" asp-action="DeleteQueryConfirm">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>           
        </form>
       
      </div>
    </div>
  </div>
</div>
</form>
