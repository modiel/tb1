@model QuerySearchViewModel

<!-- search form calls Index POST action -->

    <form asp-controller="Query" asp-action="Index" >
        
        <!--  radio inputs and labels for ALL, CLOSED and OPEN range options -->
        <div class="form-check form-check-inline ms-1 ">
            <!-- ALL -->
            <input class="form-check-input" type="radio" asp-for="Range" value="@QueryRange.ALL">
            <label class="form-check-label" for= "Range">All</label>
        </div>
        <div class="form-check form-check-inline ms-1 ">
            <!-- CLOSED -->
            <input class="form-check-input" type="radio" asp-for="Range" value="@QueryRange.CLOSED">
            <label class="form-check-label" for= "Range">Closed</label>
        </div>
        <div class="form-check form-check-inline ms-1 ">
            <!-- OPEN -->
            <input class="form-check-input" type="radio" asp-for="Range" value="@QueryRange.OPEN">
            <label class="form-check-label" for= "Range">Open</label>
        </div>

        <div class= "row"
        <!--  add text input for Query -->
        <input class= "form-control form-control me-sm-2 col" asp-for="Query" placeholder="Search...">
    
        <button class="btn btn-outline-success me-sm-3 col " type="submit">Search</button>
        </div>
    </form>



