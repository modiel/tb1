@model User

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/user", "Users"), ("","UserDetails") })>

    <h3 class="mt-4 mb-4" id="top">User Details: @Model.Name</h3>
   
    <!-- action options -->
    <div class="container">
        <div class="col ">

            <!-- add navigation link to CreateQuery action, passing correct route parameter -->
            @* <a asp-action="CreateQuery" asp-route-id="@Model.Id" class="btn btn-sm btn-info mr-2">
                <i class="bi bi-plus-square-dotted p-1"></i>Add Query
            </a> *@

            <!-- add navigation link to Edit action, passing the correct route id parameter -->
            <!-- note use of ClaimsPrincipal extension method HasOneOfRoles (found in Extensions) -->

            

            <!-- add navigation link to redirect to Index action -->
            <a asp-controller="User" asp-action="Index" class="btn btn-sm btn-light mr-2">
                <i class="bi bi-card-list p-1"></i>User List
            </a>

            <!-- add navigation link to Delete action, passing the correct route id parameter -->
             <button asp-condition=@User.IsInRole("Tutor") data-bs-toggle="modal"
                data-bs-target="#deleteUserModal" class="btn btn-sm btn-outline-danger ml-2">
                <i class="bi bi-trash mr-1"></i>Delete User
            </button> 

            <a asp-condition=@User.HasOneOfRoles("Tutor,Parent") class="btn btn-sm btn-primary my-3" asp-controller="Student" asp-action="Create" title="Create new student">Create <i class="bi bi-person-plus-fill"></i></a>     

            

             @* <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id" 
             title="Update User" class="btn btn-sm btn-outline-success mr-2">
                    <i class="bi bi-pencil-square p-1"></i>Edit User
             </a>    
            *@
        <div>      
    </div>
         

    <div class="card shadow rounded p-3">
        <div class="row pl-3">
            <!-- Details -->
            <div class="col pt-3">
                <dl class="row">
                    <dt class="col-7">Id</dt>
                    <dd class="col-5">@Model.Id</dd>

                    <dt class="col-7">Name</dt>
                    <dd class="col-5">@Model.FirstName @Model.LastName</dd>

                    <dt class="col-7">Contact Name (if under 18)</dt>
                    <dd class="col-5">@Model.ContactName</dd>
 
                    <dt class="col-7">Email</dt>
                    <dd class="col-5">@Model.Email</dd>

                    <dt class="col-7">Phone Number</dt>
                    <dd class="col-5">@Model.Phone</dd>

                    <dt class="col-7">Alternative Phone</dt>
                    <dd class="col-5">@Model.AltPhone</dd>

                    <dt class="col-7">Address Line 1 </dt>
                    <dd class="col-5">@Model.AddressLineOne</dd>

                    <dt class="col-7">Address Line 2 </dt>
                    <dd class="col-5">@Model.AddressLineTwo</dd>

                    <dt class="col-7">Address Line 3 </dt>
                    <dd class="col-5">@Model.AddressLineThree</dd>

                    <dt class="col-7">Postcode </dt>
                    <dd class="col-5">@Model.Postcode</dd>

                    <dt class="col-7">Date of Birth</dt>
                    <dd class="col-5">@Model.Dob.ToShortDateString()</dd>

                    <dt class="col-7">Age</dt>
                    <dd class="col-5">@Model.Age</dd>

                    <dt class="col-7">Gender</dt>
                    <dd class="col-5">@Model.Gender</dd>
                    
                    <dt class="col-7">Role</dt>
                    <dd class="col-5">@Model.Role</dd>

                </dl>
            </div>
        </div>
    </div>

    <div>
        <p><a href="#top">Top of page</a></p>
    </div>

<partial name="_DeleteUserModal" />

