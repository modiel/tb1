@model Student

<partial name="_Breadcrumbs" model=@(new [] { ("/", "Home"), ("/student", "Students"), ("","Delete") })>

<h3 class="mt-4 mb-4">Delete Student</h3>

<h4 class="mb-4">Are you sure you want to delete this Student?</h4>

<div>
    <!-- display the student using a <dl> as per Details.cshtml -->
    <div class="col card rounded shadow pt-3">
        <dl class="row">       
            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>            

            <dt class="col-5">Contact Name (if under 18)</dt>
            <dd class="col-7">@Model.User.ContactName</dd>
            
            <dt class="col-5">Email</dt>
            <dd class="col-7">@Model.User.Email</dd>

            <dt class="col-5">Phone Number</dt>
            <dd class="col-7">@Model.User.Phone</dd>
            
            <dt class="col-5">Alternative Phone</dt>
            <dd class="col-7">@Model.User.AltPhone</dd>

            <dt class="col-5">Address Line 1 </dt>
            <dd class="col-7">@Model.User.AddressLineOne</dd>

            <dt class="col-5">Address Line 2 </dt>
            <dd class="col-7">@Model.User.AddressLineTwo</dd>
        
            <dt class="col-5">Address Line 3 </dt>
            <dd class="col-7">@Model.User.AddressLineThree</dd>

            <dt class="col-5">Postcode </dt>
            <dd class="col-7">@Model.User.Postcode</dd>

            <dt class="col-5">Dob</dt>
            <dd class="col-7">@Model.User.Dob</dd>

            <dt class="col-5">Gender</dt>
            <dd class="col-7">@Model.User.Gender</dd>

            <dt class="col-5">Allergies</dt>
            <dd class="col-7">@Model.Allergies</dd>

            <dt class="col-5">Additional Needs/Conditions</dt>
            <dd class="col-7">@Model.AdditionalNeeds</dd>

            <dt class="col-5">Instrument 1</dt>
            <dd class="col-7">@Model.InstrumentOne</dd>

            <dt class="col-5">Current Grade Instrument 1</dt>
            <dd class="col-7">@Model.CurrentGradeInstOne</dd>

            <dt class="col-5">Instrument 2 (if applicable)</dt>
            <dd class="col-7">@Model.InstrumentTwo</dd>

            <dt class="col-5">Current Grade Instrument 2</dt>
            <dd class="col-7">@Model.CurrentGradeInstTwo</dd>
  
            <dt class="col-5">Current Theory Grade (if applicable)</dt>
            <dd class="col-7">@Model.CurrentTheoryGrade</dd>

            <dt class="col-5">Aurals Required?</dt>
            <dd class="col-7">@Model.Aurals</dd>

            <dt class="col-5">Lesson Format (In person/Online/Hybrid)</dt>
            <dd class="col-7">@Model.LessonFormat</dd>

            <dt class="col-5">Usual Day-Lesson 1</dt>
            <dd class="col-7">@Model.LessonOneDay</dd>

            <dt class="col-5">Usual Day-Lesson 2 (if applicable)</dt>
            <dd class="col-7">@Model.LessonTwoDay</dd>

        </dl>
    </div>

    <div class="mt-4">
        <!-- create a form to submit post request to DeleteConfirm action  
            student Id should be a hidden input field named 'Id" in the form       
            add type submit input button                                   
            add cancel link which calls Index action -->
        <form asp-controller="Student" asp-action="DeleteConfirm" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="Student" asp-route-id=@Model.Id asp-action="Details" >Cancel</a>
        </form>
    </div>
    
</div>

